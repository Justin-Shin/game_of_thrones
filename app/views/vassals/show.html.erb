
<% if @vassal.noble %>
  <h2>House <%= @vassal.name %></h2>
  <h3>Of <%= @vassal.seat%> in <%= @vassal.region %></h3>
  <%= image_tag "#{@vassal.sigil}", class: "sigil" %>
  <h3>"<%= @vassal.words%>"</h3>
  <h3>Sworn fealty to <%= link_to "House #{@vassal.house.name}", house_path(@vassal.house) %></h3>
<% else %>
<h2>Members</h2>
  <h2><%= @vassal.name %></h2>
  <%= image_tag "#{@vassal.sigil}", class: "sigil" %>
<% end %>
<%@vassal.characters.each do |character|%>
<div class="character"><%= link_to character.name, character_path(character)%></div>
<%end%>
